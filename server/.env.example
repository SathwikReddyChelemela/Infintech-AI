# Medical Assistant - Single environment file (server/.env)
# Copy this file to server/.env and fill in your actual values

# MongoDB
MONGO_URI=mongodb+srv://your-username:your-password@cluster.mongodb.net/
DB_NAME=rbac_medical_assistant

# JWT
JWT_SECRET_KEY=change-me-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# Optional LLM (Groq). Leave unset to use rule-based replies.
# GROQ_API_KEY=
# GROQ_MODEL=llama3-70b-8192

# App
DEBUG=True
LOG_LEVEL=INFO

# CORS (set specific origins in production)
ALLOWED_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]
